<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:SDX.Toolkit.Converters">

    <!-- Coloring Book Control -->
    <x:Double x:Key="ColoringBookBitmapImageWidth">855</x:Double>
    <x:Double x:Key="ColoringBookPaletteIconWidth">42</x:Double>

<conv:DoubleToIntConverter x:Key="DoubleToIntConverterKey"/>
    
    <BitmapImage x:Key="ColoringBookBitmapImage"
                 UriSource="ms-appx:///Assets/Accessories/peacock.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookBitmapImageWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookReset"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/reset.png"                 
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookRed"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/red.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookBlue"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/blue.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookTeal"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/teal.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookOrange"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/orange.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookPurple"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/purple.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookRedActive"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/red_active.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookBlueActive"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/blue_active.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookTealActive"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/teal_active.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookOrangeActive"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/orange_active.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>
    <BitmapImage x:Key="BitmapImageColoringBookPurpleActive"
                 UriSource="ms-appx:///Assets/Icons/ArtworkColors/purple_active.png"
                 DecodePixelWidth="{Binding Source={StaticResource ColoringBookPaletteIconWidth}, 
                        Converter={StaticResource DoubleToIntConverterKey},
                        Mode=OneWay}"/>

</ResourceDictionary>
