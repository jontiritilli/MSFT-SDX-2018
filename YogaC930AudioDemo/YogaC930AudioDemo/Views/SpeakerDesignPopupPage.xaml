<Page
    x:Class="YogaC930AudioDemo.Views.SpeakerDesignPopupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding SpeakerDesignPopupViewModel, Source={StaticResource Locator}}"
    Height="942"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="111.54"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="{StaticResource NavigationBarHeight}"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="{StaticResource AppCloseWidth}"/>
        </Grid.ColumnDefinitions>
        <StackPanel
            Orientation="Vertical"
            
            HorizontalAlignment="Right">
        <TextBlock
            Width="515"
            Style="{StaticResource PageTitleStyle}"     
            Text="An audio system like no other" />
        <TextBlock
                Width="515"
                Style="{StaticResource BodyTextStyle}"
            Text="Dual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speaker"/>
        </StackPanel>
        <Image x:Name="imgHero"
               Grid.Row="0"
               Grid.RowSpan="6"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Width="1764">
            <Image.Source>
                <BitmapImage UriSource="ms-appx:///Assets/SpeakerDesign/audio_popupHero1.png"
                                 DecodePixelWidth="1764" DecodePixelType="Logical"/>
            </Image.Source>
        </Image>
        <Button
            x:Name="btnClose"
            Grid.Column="2"
            Grid.Row="0"
            Canvas.ZIndex="100"
            Margin="0,24.54,23.985,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Click="btnClose_Click"
            Width="60">
            <Image>
                <Image.Source>
                    <BitmapImage UriSource="ms-appx:///Assets/Universal/ui_btn_closePopup.png"
                                 DecodePixelWidth="60" DecodePixelType="Logical"/>
                </Image.Source>
            </Image>
        </Button>

    </Grid>

</Page>
