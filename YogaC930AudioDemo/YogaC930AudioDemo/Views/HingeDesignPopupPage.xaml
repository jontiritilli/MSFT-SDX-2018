<Page
    x:Class="YogaC930AudioDemo.Views.HingeDesignPopupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding HingeDesignPopupViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Canvas
        Width="{StaticResource CanvasWidth}"
        Height="{StaticResource CanvasHeight}"
        Background="{x:Bind Path=ViewModel.BackgroundColor}">
        <Grid
            x:Name="LayoutRoot"
            Background="White"
            Height="{StaticResource PopupHeight}"
            Width="{StaticResource PopupWidth}">
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource TopMargin}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{StaticResource TopMargin}"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="{StaticResource TopMargin}"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Center">
            
                <TextBlock
                    Width="{StaticResource PopupHeaderWidth}"
                    TextAlignment="Center"
                    HorizontalAlignment="Center"
                    Style="{StaticResource PageTitleStyle}"     
                    Text="An audio system like no other" />
            
                <TextBlock Grid.Row="1" Grid.Column="1"
                    Width="{StaticResource PopupHeaderWidth}"
                    TextAlignment="Center"
                    HorizontalAlignment="Center"
                    Style="{StaticResource BodyTextStyle}"
                    Text="Dual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speakerDual speaker"/>
            </StackPanel>
        
            <Image Grid.Row="3" Grid.Column="0"
                x:Name="imgHero"
                VerticalAlignment="Center"
                Width="1692">
                <Image.Source>
                    <BitmapImage
                        UriSource="ms-appx:///Assets/HingeDesign/audio_popupHero2.png"
                        DecodePixelWidth="1692"
                        DecodePixelType="Logical"/>
                </Image.Source>
            </Image>

            <Canvas Grid.Row="0" Grid.Column="0" Grid.RowSpan="5">
                <Grid
                    x:Name="btnClose"
                    Width="{StaticResource PopupCloseBtnWidth}"
                    Canvas.Left="{StaticResource PopupCloseBtnSetLeft}"
                    Canvas.Top="{StaticResource PopupCloseBtnSetTop}"
                    PointerReleased="btnClose_Click">
                
                    <Image>
                        <Image.Source>
                            <BitmapImage
                                UriSource="ms-appx:///Assets/Universal/ui_btn_closePopup.png"
                                DecodePixelWidth="60"
                                DecodePixelType="Logical"/>
                        </Image.Source>
                    </Image>
                </Grid>
            </Canvas>
        </Grid>
    </Canvas>
</Page>
