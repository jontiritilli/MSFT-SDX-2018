<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SurfaceLaptopDemo.Styles">

    <GridLength x:Key="LeftMargin">80</GridLength>
    <GridLength x:Key="TopMargin">80</GridLength>
    <GridLength x:Key="RightMargin">80</GridLength>
    <GridLength x:Key="BottomMargin">50</GridLength>

    <GridLength x:Key="SpaceBelowHeader">30</GridLength>

    <x:Double x:Key="HeaderWidth">450</x:Double>

    <x:Double x:Key="CanvasWidth">1500</x:Double> <!-- 3000 / 2 for 200% scaling -->
    <x:Double x:Key="CanvasHeight">960</x:Double> <!-- = (2000 / 2) - 80 for navbar @ 200% scaling -->

    <x:Double x:Key="AccessoryImageSelectorWidth">1420</x:Double> <!-- 1500 - 60 for legal row-->
    <x:Double x:Key="AccessoryImageSelectorHeight">910</x:Double> <!-- 960 - 50 for col 0 -->

</ResourceDictionary>
